<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="null"
            android:id="@+id/show_time_text_view"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:textSize="@dimen/time_text_size"
            android:textColor="@color/contentColor"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/content_height" />

        <TextView
            android:text="null"
            android:id="@+id/show_content_text_view"
            android:layout_marginLeft="20dp"
            android:gravity="top|left"
            android:textSize="@dimen/content_text_size"
            android:textColor="@color/contentColor"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/content_height" />

    </LinearLayout>

    <Button
        android:id="@+id/note_delete_button"
        android:text="@string/delete"
        android:textSize="@dimen/content_text_size"
        android:textColor="@color/redOrangeColor"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/red_orange_simple_button"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/simple_button_heigth"
        android:layout_weight="4"
        android:onClick="onButtonClick" />
</LinearLayout>